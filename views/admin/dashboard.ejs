<div class="admin-title">
  <h2>Post</h2>
  <a href="/add-post" class="button">+ Add New</a>
</div>

<ul class="admin-posts">
  <% data.forEach(post=> { %>
    <li>
      <a href="/admin/post/<%= post._id %>">
        <%= post.title %> &nearr;
      </a>
      <div class="admin-post-controls">
        <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
        <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete" class="btn-delete btn">
        </form>
      </div>
    </li>
    <% }) %>
</ul>

<div class="pagination">
  <% if (nextPage !==null) { %>
    <a href="/dashboard?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
      <% if (current>= 2) { %>
        <div>
          <a href="/dashboard?page=<%= current - 1 %>" class="pagination">View Latest Post &gt;</a>
        </div>
        <% } %>
</div>